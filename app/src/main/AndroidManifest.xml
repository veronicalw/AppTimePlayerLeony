<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/timer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity android:name=".OptionActivity"></activity>
        <activity android:name=".TimePlayer.TimePlayer"
            android:launchMode="singleTop"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TimePlayer.ServiceActivity"
            android:exported="true"
            android:excludeFromRecents="true"
            android:documentLaunchMode="always" >
        </activity>
        <activity
            android:name=".TimePlayer.ShortcutActivity"
            android:label="@string/timelable_shortcut"
            android:excludeFromRecents="true" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <service
            android:name=".TimePlayer.MyServices"
            android:enabled="true"
            android:launchMode="singleTask" />
    </application>

</manifest>